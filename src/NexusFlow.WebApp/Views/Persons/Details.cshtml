@model PersonViewModel
@{
    ViewData["Title"] = "Person Details";
}

<div class="container py-5">
    <a asp-action="Index" class="btn btn-secondary mb-4">Back to List</a>
    
    <!-- Basic Details -->
    <div class="card">
        <div class="card-header">
            <h4 class="text-primary">Person Detials</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Code</th>
                        <td>@Model.Code</td>
                    </tr>
                    <tr>
                        <th>ID Number</th>
                        <td>@Model.IdNumber</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Model.Surname</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Accounts -->
    <div class="card mt-5">
        <div class="card-header">
            <h4 class="text-primary">Account list</h4>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-action="Details" asp-controller="Accounts" asp-route-personCode="@Model.Code" class="btn btn-success">Add New Account</a>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Account number</th>
                        <th>Outstanding Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Accounts.Any())
                    {
                        foreach (var account in Model.Accounts)
                        {
                            <tr>
                                <td>@account.Code</td>
                                <td>@account.AccountNumber</td>
                                <td>@account.OutStandingBalance</td>
                                <td>
                                    <a asp-action="Details" asp-controller="Accounts" asp-route-id="@account.Code" class="btn btn-sm btn-primary">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No accounts found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

