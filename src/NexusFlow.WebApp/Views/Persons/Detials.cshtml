@model PersonViewModel
@{
    ViewData["Title"] = "Person Details";
}

<div class="container py-5">
    <h1 class="text-primary mb-4">Person Detials</h1>
    <a asp-action="Index" class="btn btn-secondary mb-4">Back to List</a>
    
    <!-- Basic Details -->
    <div class="card">
        <div class="card-header row g-3">
            <h4>@Model.Name @Model.Surname</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Code</th>
                        <td>@Model.Code</td>
                    </tr>
                    <tr>
                        <th>ID Number</th>
                        <td>@Model.IdNumber</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Model.Surname</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

