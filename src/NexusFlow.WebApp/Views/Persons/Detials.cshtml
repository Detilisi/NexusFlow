@model PersonViewModel
@{
    ViewData["Title"] = "Person Details";
}

<div class="container py-5">
    <h1 class="text-primary mb-4">Person Detials</h1>
    <a asp-action="Index" class="btn btn-secondary mb-4">Back to List</a>
    
    <!-- Basic Details -->
    <div class="card">
        <div class="card-header">
            <h4>@Model.Name @Model.Surname</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Code</th>
                        <td>@Model.Code</td>
                    </tr>
                    <tr>
                        <th>ID Number</th>
                        <td>@Model.IdNumber</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>@Model.Surname</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Accounts -->
    <div class="card-body mt-3">
        <!-- Add New Account Button -->
        <div class="text-end mb-3">
            <a asp-action="Save" class="btn btn-success">Add New Account</a>
        </div>
        
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Account number</th>
                    <th>Outstanding Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Accounts.Any())
                {
                    foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>@account.Code</td>
                            <td>@account.AccountNumber</td>
                            <td>@account.OutStandingBalance</td>
                            <td>
                                <a asp-action="Save" asp-route-id="@account.Code" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@account.Code" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-action="Detials" asp-route-id="@account.Code" class="btn btn-sm btn-primary">View</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No accounts found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

