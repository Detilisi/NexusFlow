@model AccountViewModel
@{
    ViewData["Title"] = "Accounts";
}

<div class="container py-5">
    <h1 class="text-primary mb-4">Save Person</h1>

    <div class="card shadow-sm m-2 p-5">
        <form asp-action="SubmitSave">
            <div class="form-group">
                <label>Account Number</label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Outstanding Balance</label>
                <input asp-for="OutStandingBalance" class="form-control" />
                <span asp-validation-for="OutStandingBalance" class="text-danger"></span>
            </div>
            <div class="mt-5 text-end">
                <button type="submit" class="btn btn-success"> Save </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>


