@model IEnumerable<PersonViewModel>

@{
    ViewData["Title"] = "Persons";
}

<div class="container py-5">

    <h1 class="text-primary mb-4">Persons List</h1>

    <!-- Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="mb-2 text-end">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>

            <form method="get" action="@Url.Action("Search", "Person")">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="idNumber" class="form-label">ID Number</label>
                        <input type="text" class="form-control" id="idNumber" name="idNumber" placeholder="Enter ID Number" />
                    </div>
                    <div class="col-md-4">
                        <label for="surname" class="form-label">Surname</label>
                        <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter Surname" />
                    </div>
                    <div class="col-md-4">
                        <label for="accountNumber" class="form-label">Account Number</label>
                        <input type="text" class="form-control" id="accountNumber" name="accountNumber" placeholder="Enter Account Number" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Add New Person Button -->
            <div class="text-end mb-3">
                <a href="@Url.Action("Create", "Person")" class="btn btn-success">Add New Person</a>
            </div>
            <!-- Persons Table -->
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>ID Number</th>
                        <th>Account Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var person in Model)
                        {
                            <tr>
                                <td>@person.Id</td>
                                <td>@person.FirstName</td>
                                <td>@person.LastName</td>
                                <td>@person.IdNumber</td>
                                <td>@person.AccountNumber</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Person", new { id = person.Id })" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="@Url.Action("Delete", "Person", new { id = person.Id })" class="btn btn-sm btn-danger">Delete</a>
                                    <a href="@Url.Action("View", "Person", new { id = person.Id })" class="btn btn-sm btn-primary">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No persons found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
